
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>
<MudLayout>
    <MudAppBar Color="Color.Primary">

        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleMenu"/>
        <MudSpacer />
        <LoginPaper />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/Martivis/Rewriting"/>

    </MudAppBar>
    
    <MudDrawer @bind-Open="IsMenuOpened" Variant="DrawerVariant.Responsive" Elevation="1">

        <MudDrawerHeader>
            <MudButton Href="/" FullWidth="true">
                <MudText Typo="Typo.h5">Rewriting</MudText>
            </MudButton>
        </MudDrawerHeader>
    
        <MudNavMenu>
            <MudNavLink Match="NavLinkMatch.All" Href="/">Home</MudNavLink>
            <MudNavLink Match="NavLinkMatch.All" Href="/new_orders">Find job</MudNavLink>

            <AuthorizeView>
                <MudNavLink Match="NavLinkMatch.All" Href="/my_orders">My orders</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Href="my_contracts">My contracts</MudNavLink>
                <MudNavLink Match="NavLinkMatch.All" Href="my_offers">My offers</MudNavLink>
            </AuthorizeView>
        </MudNavMenu>
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code
{
    public bool IsMenuOpened { get; set; }

    public void ToggleMenu()
    {
        IsMenuOpened = !IsMenuOpened;
    }
}