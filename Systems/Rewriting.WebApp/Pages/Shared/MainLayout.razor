
@inherits LayoutComponentBase

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudAppBar Color="Color.Primary" Fixed="false">
    <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="ToggleMenu"/>
    <MudSpacer />
    <LoginPaper />
    <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/Martivis/Rewriting"/>
</MudAppBar>

<MudDrawer @bind-Open="IsMenuOpened" Variant="DrawerVariant.Persistent">
    <MudList Clickable="true">
        <MudListItem Href="/">Home</MudListItem>
        <MudDivider />
        <MudListItem Href="/new_orders">Find job</MudListItem>
        <MudDivider />
        <AuthorizeView>
            <MudListItem Href="/my_orders">My orders</MudListItem>
            <MudDivider />
            <MudListItem Href="my_contracts">My contracts</MudListItem>
            <MudDivider />
            <MudListItem Href="my_offers">My offers</MudListItem>
        </AuthorizeView>
    </MudList>
</MudDrawer>

<MudContainer Fixed="true">
    @Body
</MudContainer>

@code
{
    public bool IsMenuOpened { get; set; }

    public void ToggleMenu()
    {
        IsMenuOpened = !IsMenuOpened;
    }
}