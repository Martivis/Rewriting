@typeparam TModel


<MudContainer MaxWidth="MaxWidth.Medium">
    <MudStack AlignItems="AlignItems.Stretch">
        @if (_items is null)
        {
            @for (int i = 0; i < _pageSize; i++)
            {
                <OrderSkeleton />
            }
        }
        else
        {
            @foreach (var item in _items)
            {
                @ChildContent(item)
            }
        }
    </MudStack>

    <MudCard>
        <MudStack Row="true" Justify="Justify.SpaceBetween">
            <MudButton @onclick="PrevPage">Prev</MudButton>
            <MudButton Disabled="true">@_page</MudButton>
            <MudButton @onclick="NextPage">Next</MudButton>
        </MudStack>
    </MudCard>
</MudContainer>

@code
{
    [Parameter]
    [EditorRequired]
    public AbstractListService<TModel> ItemService { get; set; }

    [Parameter]
    [EditorRequired]
    public RenderFragment<TModel> ChildContent { get; set; }

    private IEnumerable<TModel>? _items;
    private int _page = 1;
    private int _pageSize = 10;

    protected override async Task OnInitializedAsync()
    {
        await GetItems();
    }

    private async Task GetItems()
    {
        _items = await ItemService.GetItemsAsync(_page - 1, _pageSize);
    }

    private async Task NextPage()
    {
        if (_items is null)
            return;

        _page++;
        await GetItems();
        if (!_items.Any())
            await PrevPage();
    }

    private async Task PrevPage()
    {
        if (_items is null || _page <= 1)
            return;
        _page--;
        await GetItems();
    }
}
