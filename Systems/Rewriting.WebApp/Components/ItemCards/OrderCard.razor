
<MudCard >
    <MudCardContent>
        <MudText Typo="Typo.h5">@Model.Title</MudText>
        <MudText Typo="Typo.subtitle1">@Model.ClientName</MudText>
        <MudText Typo="Typo.subtitle1">@Model.PublishDate</MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Text" Color="Color.Primary"
            Href="@($"/" + (IsContract() ? "contract" : "order") + $"/{Model.Uid.ToString()}")">Details</MudButton>
    </MudCardActions>
</MudCard>


@code 
{
    [Parameter]
    public OrderModel Model { get; set; }

    private bool IsContract()
    {
        return Model.Status != OrderStatus.New &&
               Model.Status != OrderStatus.Canceled;
    }
}
