
@inject IDialogService DialogService

<AuthorizeView>
    <Authorized>
        <MudMenu Icon="@Icons.Material.Sharp.AccountCircle" Color="Color.Inherit">
            <MudMenuItem @onclick="OpenLogoutDialog">Logout</MudMenuItem>
        </MudMenu>
    </Authorized>
    <NotAuthorized>
        <MudButton @onclick="OpenLoginDialog" Color="Color.Inherit" Variant="Variant.Text">Sign in</MudButton>
        <MudButton Color="Color.Inherit" Variant="Variant.Text">Register</MudButton>
    </NotAuthorized>
</AuthorizeView>

@code
{
    private readonly DialogOptions dialogOptions = new()
        {
            CloseOnEscapeKey = true,
            CloseButton = true,
            DisableBackdropClick = true,
        };

    private void OpenLoginDialog()
    {
        DialogService.Show<LoginDialog>("Login", dialogOptions);
    }

    private void OpenLogoutDialog()
    {
        DialogService.Show<LogoutDialog>("Logout?", dialogOptions);
    }
}
